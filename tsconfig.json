{
  "compilerOptions": {
    "rootDir": "./src",
    "target": "es5",
    "outDir": "./dist/cjs",
    "module": "commonjs",
    "lib": [
      "ES2015"
    ],
    "declaration": false,
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules/",
    "test/"
  ]
}
