{
  "compilerOptions": {
    "rootDir": "./src",
    "target": "es6",
    "outDir": "./dist",
    "module": "commonjs",
    "lib": [ "ES2015" ],
    "declaration": true,
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true
  },
  "include": [
      "./src/api.ts"
  ],
  "exclude": [
    "node_modules",
    "tests"
  ]
}
